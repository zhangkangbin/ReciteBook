<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.fragment.AnswerSubjectFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">


            <TextView
                android:id="@+id/testTvSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="subject"
                android:gravity="left"
                android:hint="plase input subject"
                android:inputType="text"
                android:minHeight="50dp"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="LabelFor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLineGray" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp">

                <TextView
                    android:id="@+id/testTvAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_marginTop="8dp"
                    android:autofillHints="subject"
                    android:gravity="center_vertical"
                    android:minHeight="100dp"
                    android:text="You can click here to show the answer!"
                    android:textSize="16sp"
                    tools:ignore="LabelFor" />

            </androidx.cardview.widget.CardView>


            <!--          <Button
                          android:id="@+id/testTvShowAnswer"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="50dp"
                          android:background="@color/colorBlue"
                          android:text="show answer"
                          android:textAllCaps="false"
                          android:textColor="@color/colorWhite" />-->

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/testTvForget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorRed"
            android:gravity="center"
            android:padding="15dp"
            android:text="Forget"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/testTvCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorBlue"
            android:drawableLeft="@drawable/collect_un_ic"
            android:drawablePadding="6dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="Collect"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/testTvRemember"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorGreen"
            android:gravity="center"
            android:padding="15dp"
            android:text="Remember"
            android:textColor="@color/colorWhite" />

    </LinearLayout>


</LinearLayout>

